{ lib, ... }:

{
  programs.kitty = {
    enable = true;
    settings = {
      background_blur  = 1;
      window_margin_width = 10;
      background_opacity = lib.mkForce 0.7;

      tab_bar_min_tabs = 1;
      tab_bar_edge = "bottom";
      tab_bar_style = "powerline";
      tab_powerline_style = "slanted";
      tab_title_template = "{title}{' :{}:'.format(num_windows) if num_windows > 1 else ''}";
    };
  };
  stylix.targets.kitty = {
    enable = true;
  };
}