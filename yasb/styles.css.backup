:root {
    /* Generated by ChatGPT */
    /* Background & Surfaces */
    --bg-primary: #050510;      /* Main background, deep space black */
    --bg-secondary: #0A0047;    /* Panels, bars, menus */
    --surface: #0E1A2B;         /* For floating widgets, popups */

    /* Text */
    --text-primary: #E0E8F0;    /* Soft white for primary text */
    --text-secondary: #94A3B8;  /* Subtle gray-blue for secondary info */

    /* Signature Accents */
    --accent-cyan: #00FFD2;     /* Neon cyan, cursor, highlights */
    --accent-pink: #FF4499;     /* Neon magenta, buttons, active items */
    --accent-blue: #004687;     /* Deep electric blue, secondary highlights */

    /* States */
    --success: #10B981;         /* Confirmations / positive feedback */
    --warning: #FBBF24;         /* Alerts / notifications */
    --error: #EF4444;           /* Errors / failures */

    /* Battery colors */
    --battery-critical: #FF0033;  /* ðŸ”‹ 0â€“10%: emergency red */
    --battery-low:      #FF5E5E;  /* ðŸ”‹ 10â€“30%: red-pink warning */
    --battery-medium:   #FBBF24;  /* ðŸ”‹ 30â€“70%: amber glow */
    --battery-high:     #00FFD2;  /* ðŸ”‹ 70â€“90%: your accent cyan */
    --battery-full:     #00FF88;  /* ðŸ”‹ 90â€“100%: clean green-cyan hybrid */
    --battery-charging: #A78BFA;  /* âš¡ while charging: violet energy */

    /*Font thingy*/
    --font1: "JetBrainsMono Nerd Font Mono", monospace;
    --font2: Segoe UI Variable;
    --extralight: 200;
}
* {
    font-size: 13px;
    color: var(--text-primary);
    font-weight: var(--extralight);
    font-family: var(--font1);
}
.yasb-bar {
